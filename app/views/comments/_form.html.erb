
<%=  form_with(model: @comment, url: post_comments_url(@post), method: :create, local: true) do |form| %>


  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= form.submit "Save Post", class: 'btn btn-primary' %>
  </div>
<% end %>
